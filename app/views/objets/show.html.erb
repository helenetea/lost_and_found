<div class="container">
  <h1><%= @objet.titre %></h1>
  <p><strong>Ville:</strong> <%= @objet.lieu %></p>
  <p><strong>Date:</strong> <%= @objet.date.strftime("%d/%m/%Y") %></p>

  <!-- Affichage de la photo de l'objet -->
  <div class="mb-4">
    <%= image_tag @objet.photo.attached? ? @objet.photo : "placeholder.jpg", class: "img-fluid rounded", alt: @objet.titre %>
  </div>

  <p><strong>Description:</strong> <%= @objet.description %></p>

  <!-- Statut de l'objet -->
  <span class="badge <%= @objet.statut == "perdu" ? 'bg-danger' : 'bg-success' %>">
    <%= @objet.statut.capitalize %>
  </span>

  <!-- Actions -->
  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Modifier l'annonce", edit_objet_path(@objet), class: "btn btn-warning btn-sm" %>
    <%= link_to "Retourner a l'accueil", root_path, class: "btn btn-secondary btn-sm" %>
    <%= button_to "Supprimer l'annonce", @objet, method: :delete, class: "btn btn-danger btn-sm" %>
  </div>
</div>
