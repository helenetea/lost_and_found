<%= simple_form_for(@objet) do |f| %>
  <div class="card p-4 shadow-sm">
    <h2>
  <% if @objet.new_record? %>
    Déclarer un objet <%= params[:objet]&.dig(:statut) || "" %>
  <% else %>
    Modifier l'objet
  <% end %>
</h2>


    <%= f.input :titre, label: "Nom de l'objet", placeholder: "Ex: Clés de voiture" %>
    <%= f.input :description, as: :text, label: "Description", placeholder: "Détails supplémentaires sur l'objet" %>
    
    <%= f.input :photo, label: "Photo (URL pour l’instant)" %>

    <%= f.input :lieu, label: "Lieu", placeholder: "Ex: Gare centrale" %>
    <%= f.input :date, as: :date, label: "Date de perte/trouvaille" %>


    <%= f.input :statut, collection: ["perdu", "trouvé"], selected: params.dig(:objet, :statut), include_blank: false, label: "Statut" %>

    <div class="mt-3">
      <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
